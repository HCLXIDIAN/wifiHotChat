<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ty.winchat"
    android:versionCode="2"
    android:versionName="1.0.2" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 有米广告需要 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.ty.hcl.ChatApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.ty.hcl.ui.Main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ty.hcl.ui.MessageChat"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.ty.hcl.ui.Set"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="com.ty.hcl.ui.VoiceChat" />
        <activity android:name="com.ty.hcl.ui.VideoChat" />
        <activity android:name="com.ty.hcl.ui.FileChoose" />
        <activity
            android:name="com.ty.hcl.ui.RoomChat"
            android:windowSoftInputMode="stateHidden" />

        <service android:name="com.ty.hcl.service.ChatService" />

        <receiver android:name="com.ty.hcl.service.HeartBeatBroaadcastReceiver" />
    </application>

</manifest>